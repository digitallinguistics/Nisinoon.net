  <!-- favicon -->
  <link rel=icon href=/images/trillium.svg type=image/svg+xml>

  {# preload critical assets #}
  <link rel=preload href=/fonts/Libertinus-Serif-Regular.woff2 as font type=font/woff2 crossorigin>
  <link rel=preload href=/fonts/Libertinus-Serif-Italic.woff2 as font type=font/woff2 crossorigin>

  {# CSS for main layout #}
  {% set less %}
    {% include './index.less' %}
  {% endset %}

  <style>
    {{ less | css | safe }}
  </style>

</head>
